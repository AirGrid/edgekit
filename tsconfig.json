{
  "include": ["src", "types", "domain", "engine"],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "target": "es5",
    "module": "es6"
  }
}
